<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/element_list_item_height_66"
    android:background="@drawable/list_item_background_selector_music">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:gravity="top"
        android:layoutDirection="ltr"
        android:duplicateParentState="true">

        <TextView
            android:id="@+id/band_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="14dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color_state"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/element_list_item_title_text_size" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color_state"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/element_list_item_title_text_size"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/frequency_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/element_list_item_subtitle_text_size"
        android:alpha="0.35"/>
</RelativeLayout>