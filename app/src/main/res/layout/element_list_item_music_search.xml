<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/element_list_item_height_66"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layoutDirection="ltr">

        <RelativeLayout
            android:layout_width="@dimen/element_list_item_height_66"
            android:layout_height="@dimen/element_list_item_height_66">
            <ImageView
                android:id="@+id/jacket_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/p0070_noimage" />

            <FrameLayout
                android:id="@+id/play_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/player_list_play_button_width"
                    android:layout_height="@dimen/player_list_play_button_width"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p0003_quickplaybtn_1nrm" />
            </FrameLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:gravity="left"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/element_list_item_single_title_text_size" />
    </LinearLayout>
</LinearLayout>