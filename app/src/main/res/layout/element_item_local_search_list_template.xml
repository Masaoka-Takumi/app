<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_key_setting_height"
    android:orientation="vertical"
    android:layoutDirection="ltr" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/custom_key_setting_item_left_margin"
        android:orientation="horizontal"
        android:layoutDirection="ltr" >
        <me.grantland.widget.AutofitTextView
            android:id="@+id/text_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/custom_key_setting_text_left_margin"
            android:layout_marginRight="@dimen/custom_key_setting_text_right_margin"

            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"

            android:textSize="@dimen/custom_key_setting_text_size_portrait"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/right_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/right_primary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/element_list_item_title_text_size" />

            <TextView
                android:id="@+id/right_secondary_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:alpha="0.35"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/element_list_item_subtitle_text_size" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/separator_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40FFFFFF"
        android:visibility="visible"/>

</LinearLayout>