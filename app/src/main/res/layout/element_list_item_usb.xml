<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/element_list_item_height_66"
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:background="@drawable/list_item_background_selector_music"
    android:backgroundTint="?attr/uiColor">

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="@dimen/element_list_item_height_66"
        android:layout_height="@dimen/element_list_item_height_66"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/element_list_item_single_title_text_size"
            android:ellipsize="marquee"
            android:duplicateParentState="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>

    </RelativeLayout>

</LinearLayout>