<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="40dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:maxLines="2"
        android:text="@string/set_404"
        android:textColor="@android:color/black"
        android:textSize="@dimen/alexa_tutorial_title_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        autofit:minTextSize="@dimen/min_text_size_12" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/alexa_tutorial_putting_phone_image_margin_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/alexa_tutorial_putting_phone_image_margin_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/p2051_alexa_illust_01"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_center_horizontal"
        app:layout_constraintDimensionRatio="610:604"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline_center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/description_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif"
        android:gravity="top|center_horizontal"
        android:lineSpacingMultiplier="@dimen/line_spacing_multiplier_1_8"
        android:maxLines="5"
        android:text="@string/set_405"
        android:textColor="@android:color/black"
        android:textSize="@dimen/alexa_tutorial_description_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_center_horizontal"
        app:layout_constraintVertical_bias="0.2"
        autofit:minTextSize="@dimen/min_text_size_8" />

</android.support.constraint.ConstraintLayout>