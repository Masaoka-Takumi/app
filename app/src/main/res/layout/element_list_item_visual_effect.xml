<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/live_simulation_visual_effect_width"
    android:layout_height="@dimen/live_simulation_visual_effect_width">

    <ImageView
        android:id="@+id/icon_select"
        android:layout_width="@dimen/live_simulation_visual_effect_width"
        android:layout_height="@dimen/live_simulation_visual_effect_width"
        android:layout_centerInParent="true"
        android:src="@drawable/p0142_veselectbtn_1nrm"
        android:scaleType="fitCenter"
        android:tint="?attr/uiColor"/>
    <View
        android:id="@+id/icon_base"
        android:layout_width="@dimen/live_simulation_visual_effect_icon_width"
        android:layout_height="@dimen/live_simulation_visual_effect_icon_width"
        android:layout_centerInParent="true"
        android:background="@drawable/oval"
        android:alpha="0.4"/>
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/live_simulation_visual_effect_icon_width"
        android:layout_height="@dimen/live_simulation_visual_effect_icon_width"
        android:scaleType="center"
        android:layout_centerInParent="true" />

</RelativeLayout>