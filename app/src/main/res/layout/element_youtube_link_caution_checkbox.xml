<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--YouTubeLinkCaution画面のチェックボックス-->
    <RelativeLayout
        android:id="@+id/check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/checkbox_off"
            android:layout_width="@dimen/youtube_link_caution_no_display_again_check_box_width"
            android:layout_height="@dimen/youtube_link_caution_no_display_again_check_box_height"
            android:gravity="center"
            android:src="@drawable/p2021_checkbox_off"
            android:tint="?attr/uiColor"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/checkbox_on"
            android:layout_width="@dimen/youtube_link_caution_no_display_again_check_box_width"
            android:layout_height="@dimen/youtube_link_caution_no_display_again_check_box_height"
            android:gravity="center"
            android:src="@drawable/p2022_checkbox_on"
            android:tint="?attr/uiColor"
            android:visibility="gone" />

    </RelativeLayout>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/checkbox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/youtube_link_caution_no_display_again_text_left_margin"
        android:alpha="0.75"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/sta_012"
        android:textColor="@android:color/white"
        android:textSize="@dimen/youtube_link_caution_no_display_again_text_size"
        autofit:minTextSize="@dimen/min_text_size_8" />

</RelativeLayout>
