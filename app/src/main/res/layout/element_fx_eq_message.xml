<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/player_music_fx_eq_message_width_land"
    android:layout_height="@dimen/player_music_fx_eq_message_height">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/p1260_msgbg" />

        <ImageView
            android:id="@+id/message_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/p1261_msgline"
            android:tint="?attr/uiColor" />

        <ImageView
            android:id="@+id/message_line_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/p1261_msgline"
            android:visibility="invisible" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/fx_eq_message_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="?attr/uiColor"
            android:textSize="@dimen/player_music_fx_eq_message_text_size"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            autofit:minTextSize="@dimen/min_text_size_16" />
        <me.grantland.widget.AutofitTextView
            android:id="@+id/fx_eq_message_text_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/player_music_fx_eq_message_text_size"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            autofit:minTextSize="@dimen/min_text_size_16" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>