<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/element_list_item_height_66"
    android:orientation="vertical"
    android:layoutDirection="ltr">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="74dp"
        android:background="#66FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layoutDirection="ltr">

        <ImageView
            android:id="@+id/number_type"
            android:layout_width="@dimen/contact_check_icon_width"
            android:layout_height="@dimen/contact_check_icon_width"
            android:layout_marginLeft="74dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            android:alpha="0.75"/>

        <TextView
            android:id="@+id/number_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="left"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-light"
            android:textSize="@dimen/element_list_item_single_title_text_size" />
    </LinearLayout>
</LinearLayout>