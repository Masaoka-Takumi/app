<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#33000000">
    <include layout="@layout/element_navigation_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layoutDirection="ltr">

        <LinearLayout
            android:layout_width="@dimen/list_tab_width_land"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/contact_container_tab_padding_land"
            android:paddingBottom="@dimen/contact_container_tab_padding_land"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/tab_favorites"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="@dimen/list_tab_button_width"
                    android:layout_height="@dimen/list_tab_button_width"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p0017_favoritebtn_select_1nrm"
                    android:visibility="invisible"
                    android:alpha="0.75"/>
                <ImageView
                    android:layout_width="@dimen/list_tab_button_width"
                    android:layout_height="@dimen/list_tab_button_width"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p0014_favoritebtn_1nrm" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_contacts"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="@dimen/list_tab_button_width"
                    android:layout_height="@dimen/list_tab_button_width"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p0018_phonebookbtn_select_1nrm"
                    android:visibility="invisible"
                    android:alpha="0.75"/>
                <ImageView
                    android:layout_width="@dimen/list_tab_button_width"
                    android:layout_height="@dimen/list_tab_button_width"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p0015_phonebookbtn_1nrm" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tab_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackground">
                <ImageView
                    android:layout_width="@dimen/list_tab_button_width"
                    android:layout_height="@dimen/list_tab_button_width"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p0019_historybtn_select_1nrm"
                    android:visibility="invisible"
                    android:alpha="0.75"/>
                <ImageView
                    android:layout_width="@dimen/list_tab_button_width"
                    android:layout_height="@dimen/list_tab_button_width"
                    android:scaleType="fitCenter"
                    android:src="@drawable/p0016_historybtn_1nrm" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="#59ffffff" />

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>