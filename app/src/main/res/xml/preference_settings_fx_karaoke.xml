<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.preference.SwitchPreferenceCompat
        android:key="@string/key_microphone"
        android:order="10"
        android:persistent="false"
        android:title="@string/set_137"
        android:layout="@layout/element_preference_switch"/>

    <SeekBarPreference
        android:key="@string/key_mic_volume"
        android:layout="@layout/element_preference_seekbar"
        android:max="30"
        android:order="20"
        android:title="@string/set_135"
        app:showSeekBarValue="true" />

    <android.support.v7.preference.SwitchPreferenceCompat
        android:key="@string/key_vocal_cancel"
        android:order="30"
        android:persistent="false"
        android:title="@string/set_238"
        android:layout="@layout/element_preference_switch"/>
</PreferenceScreen>